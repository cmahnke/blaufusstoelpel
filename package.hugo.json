  "resolutions": {
    "manifesto.js": "IIIF-Commons/manifesto"
},
  "scripts": {
    "logo": "svgo -i Source\\ Files/Logo/Blaufußtölpel.svg -o static/images/blaufusstoelpel.svg",
    "header": "svgo --config '{ \"plugins\": [ {\"removeAttrs\": { \"attrs\": \"(style|font-weight|font-size|font-family)\" } } ] }' --enable=removeAttrs -i Source\\ Files/Logo/Header.svg -o static/images/header.svg",
    "svgo": "yarn run logo && yarn run header",
    "patch": "yarn run patch-package",
    "postinstall-mirador": "cd node_modules/mirador && yarn install && yarn run build",
    "postinstall": "yarn run patch && yarn run postinstall-mirador",
    "validate": "for file in `ls docs/post/*/*.json`; do yarn run jsonlint $file; if [ $? != 0 ]; then exit $?; fi ; done"
  }
}
