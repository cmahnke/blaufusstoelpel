{
  "@context":"http://iiif.io/api/presentation/2/context.json",
  "@type":"sc:Manifest",
  "@id":"{{ .Permalink }}",

  "label":"{{ .Title }}",
  {{- if isset .Params "metadata" -}}
      {{- jsonify .Params.metadata -}}
  {{- end -}}
  {{- if .Description -}}
    "description": "{{ .Description }}",
  {{- end -}}

}
